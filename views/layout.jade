doctype html
html(lang="en")
  head
    title TripViewer: View and Export your Automatic Trips
    meta(http-equiv="content-type" content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible" content="chrome=1")
    meta(name="description" content="View and Export your Automatic Trips")
    link(rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" media="screen")
    link(rel="stylesheet" type="text/css" href="/css/style.css" media="screen")
    link(href='//api.tiles.mapbox.com/mapbox.js/v1.4.0/mapbox.css' rel='stylesheet')
  body
    .github-fork-ribbon-wrapper
      .github-fork-ribbon
        a(href="https://github.com/Automatic/tripviewer") Fork me on GitHub

    div#wrapper
      h1.titlebar TripViewer
      .tagline View and Export your Automatic Trips

      if loggedIn
        nav#topmenu.navbar.navbar-default(role="navigation")
          .navbar-header
            button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar

          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a.display-type(href="#" data-type="tile") Tiles
              li
                a.display-type(href="#" data-type="table") Table
              li.dropdown
                a#export.dropdown-toggle(href="#" data-toggle="dropdown") <span>Export All</span> <b class="caret"></b>
                ul.dropdown-menu(role="menu")
                  li
                    a#csv(href="/download/trips.csv" target="_blank") as .csv
                  li
                    a#json(href="/download/trips.json" target="_blank") as JSON

            ul.nav.navbar-nav.navbar-right
              li
                a#logout(href="/logout/") Log Out

      #alert.alert
      block content

    if loggedIn
      script(src="//api.tiles.mapbox.com/mapbox.js/v1.4.0/mapbox.js")
      script(src="/js/Polyline.encoded.js")
      script(src="/js/jquery-1.10.2.min.js")
      script(src="/js/bootstrap.min.js")
      script(src="/js/moment.min.js")
      script(src="/js/main.js")